  <body onload="if (document.getElementById('username')) document.getElementById('username').focus()">

		<script type="text/javascript">
			var PeopleSearch = {
				search: function(url) {
					var radio_button = document.getElementById('people_search');
					var form = document.forms[0];
					if(radio_button.checked){
						form.action = "http://alumni.iitkgp.org/dashboard/search";
						form.target = "_self";
					}
					if($.trim($('#search_text_box').val()) != ""){
						form.submit();
					}
					return false;
				}
			};
		</script>

